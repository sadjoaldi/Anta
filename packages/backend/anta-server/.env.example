# Server
NODE_ENV=development
PORT=4000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=anta_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OTP Configuration
# Set to 'true' for development (bypass OTP with code 1234)
# Set to 'false' for production (real SMS)
DEV_BYPASS_OTP=true

# SMS Provider (Optional - for production)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# CORS
CORS_ORIGIN=http://localhost:3000

# Admin
ADMIN_EMAIL=admin@anta.com

# Google Maps API (for geocoding and places search)
# Get your key from: https://console.cloud.google.com/
# Required APIs: Places API, Geocoding API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
